<Window x:Class="WpfAppDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" FontSize="20">
    <StackPanel HorizontalAlignment="Left">
        <Button x:Name="btnConnect" Content="Connect" Width="100" Margin="5" 
                HorizontalAlignment="Left" Click="btnConnect_Click"/>
        <Button x:Name="btnAdd" Content="Add" Width="100" Margin="5" 
                HorizontalAlignment="Left" Click="btnAdd_Click"/>
        <Button x:Name="btnUpdate" Content="Update" Width="100" Margin="5" 
                HorizontalAlignment="Left" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="Delate" Width="100" Margin="5" 
                HorizontalAlignment="Left" Click="btnDelete_Click"/>
    </StackPanel>
</Window>
